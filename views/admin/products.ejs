<%-include('../partials/admin-header')%>




<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-sm-3 col-xl-2">
      <a href="/add_product_page"><button>Add Product</button></a>
    </div>

    <div class="col-12">
      <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">product Data</h6>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Serial Number</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Photo</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% product_data.forEach(function(product, index) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= product.name %></td>
                  <td><%= product.price %></td>
                  <td><%= product.category_name %></td>
                  <td>
                    <img class="img-thumbnail" width="100px" src="<%= product.photo %>">
                  </td>
                  <td>
                    <a href="/update_product/<%= product._id %>" class="btn border-shadow update">
                      <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                    </a>
                    <a href="/delete_product/<%=product._id%>" class="btn border-shadow delete">
                      <span class="text-gradient"><i class="fas fa-times"></i></span>
                    </a>
                  </td>
                </tr>
              <% }) %>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Table End -->

<%-include('../partials/admin-footer')%>
