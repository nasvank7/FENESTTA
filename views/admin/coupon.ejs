<%-include('../partials/admin-header')%>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>


<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
      <div class="col-sm-3 col-xl-2 w-100">
        <!-- <a href="/add_product_page"><button>Add Product</button></a>  -->
        <a href="/add_coupon_page"><button  style="background-color: #EB1616; color: white;">Add Coupon</button></a>
        
        
      </div>
      <div class="col-12">
        <% if(locals.msg) { %>
        <div id="msg" class="alert alert-success"><%- locals.msg -%></div>
        <%}%>
        <div class="bg-secondary rounded h-100 p-4">
          <h6 class="mb-4">Coupon</h6>
          <div class="table-responsive">
            <table id="myTable" class="table">
              <thead>
                <tr>
                  <th scope="col">Sl:no</th>
      
                  <th scope="col">Coupon code</th>
                  <th scope="col">Date</th>
  
                  <th scope="col">Discount</th>
                  
                 
                  <th scope="col">Action</th>
                </tr>
              </thead>
  
              <tbody>
               <% coupon.forEach((element,index) => { %>
                <tr>
                  <td style="background-color: #191C24;"><%= index+1 %></td>
                  <td style="background-color: #191C24;"><%= element.code %></td>
                
                  <td style="background-color: #191C24;"><%= element.date.toLocaleDateString() %></td>
                  <td style="background-color: #191C24;"><%= element.discount %></td>
                 
                 
               

                 
                  <td style="background-color: #191C24;">
                <a  data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fas fa-pencil-alt"></i></a>
                <% if (element.status) { %>
                  <a href="/deactivateCoupon/<%= element._id %>" style="color: beige;" class="btn btn-danger">Deactivate</a>
                  <% }else {%>
                  <a href="/activateCoupon/<%= element._id %>" style="color: beige;" class="btn btn-success">Activate</a>
                
                  <% } %>
                  </td>
                </tr>
               <% }) %>
             
         
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Table End -->
  <!-- Modal -->


    <!-- Modal -->
  
    <div class="modal fade" id="exampleModal" tabindex="-1"  aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" >
        <div class="modal-content" style="background-color: #535f80;">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Status update</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" method="post">
                    <select name="status">
                        
                        <option value="Pending">Pending</option>
                        <option value="Delivered" >Delivered</option>
                        <option value="Shipped" >Shipped</option>
                        <option value="Cancelled" >Cancelled</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>

            </div>
        </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
  <script>
    setTimeout(() => {
      document.getElementById("msg").style.display = "none";
    }, 1000);
    
  
    $(document).ready(function() {
      $('#myTable').DataTable();
    })
    let table= new DataTable('#myTable')
   
  </script>

  
  
<%-include('../partials/admin-footer')%>
