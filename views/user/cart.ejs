<script>
	function changeQuantity(cartId,productId,count){
		$.ajax({
			url:'/changeQuantity',
			data:{
				cart:cartId,
				product:productId,
				count:count
			},
			method:'post',
			success:(response)=>{
				alert(response)
			}
		})
	}
</script>
